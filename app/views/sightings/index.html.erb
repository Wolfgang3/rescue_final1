<div class="container">
<div class="row">
<br>
<!-- ++++++++++ Listing of all your sightings +++++++++++++-->
<h1 class="center-align">Listing of all your sightings</h1>
<% if @sighting.size >0 %>
<table class="highlight">
  <thead>
    <tr>
      <th>Species</th>
      <th>Date</th>
      <th>Status</th>
      <th>Rescuer's name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @sighting.each do |complaint| %>
      <tr>
        <td><%= complaint.species %></td>
        <td><%= complaint.created_at.strftime("%d, %B, %Y") %></td>
        <td><% if complaint.status == false %>
            <%= "not yet attended" %>
            <% else %>
            <%= "help is on the way" %>
            <% end %>
        </td>

        <td><% if complaint.status == false %>
            <%= "" %>
            <% else %>
      
            <%= link_to "#{User.find(complaint.rescuer_id).name}",  user_view_path(:id => complaint.rescuer_id) , method: :get %> 
            <% end %>
        </td>
        <td><%= link_to 'Show', complaint , :class=>"glyphicon glyphicon-search"%></td>
        <td><%= link_to 'Edit', edit_sighting_path(complaint),method: :get, :class=>"glyphicon glyphicon-search" %></td>
        <td><%= link_to 'Destroy', complaint, method: :delete, data: { confirm: 'Are you sure?' } , :class=>"glyphicon glyphicon-search"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <h4>NO sightings registered by you</h4>
<% end %>

<br>
