<div class="container">
<p id="notice"><%= notice %></p>

<h1 class="center-align">Listing Reports</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Sighting</th>
      <th>Details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.user_id %></td>
        <td><%= report.sighting_id %></td>
        <td><%= report.details %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="row">
<%= link_to 'New Report', new_report_path, class:"btn blue  col m4  col m4 offset-m4" %>
</div>
</div>
